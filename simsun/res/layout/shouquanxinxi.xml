<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background" 
    android:id="@+id/root">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_background" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jsk_fh"
            android:onClick="btnClick" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shouquanxinxi_03" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/jyxh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qianfashenqing_jyxh"
            android:textColor="#33ccff" />

        <TextView
            android:id="@+id/jyxh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33ccff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jyxh_layout"
        android:layout_margin="10dp"
        android:background="@drawable/klxg_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginTop="20dp">

            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shouquanxinxi_07"
                    android:layout_centerInParent="true" 
                    />
                
            </RelativeLayout>
            
            
                     <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                
                <TextView
                    android:id="@+id/auth_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    />
                
            </RelativeLayout>
            
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:text="收  款  人:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/txt_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                     />

                <TextView
                    android:id="@+id/skgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@+id/txt_img1"
                    android:singleLine="true" 
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/skzh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:text="收款账号:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/txt_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                     />

                <TextView
                    android:id="@+id/skzh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@+id/txt_img2"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"
                    android:textSize="15dp" 
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:text="付款账号:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/txt_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                     />

                <TextView
                    android:id="@+id/fkzh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@+id/txt_img3"
                    android:singleLine="true" 
                    android:textColor="#000000"
                     android:layout_centerInParent="true"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:text="付款金额:"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:id="@+id/txt_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                  />

                <TextView
                    android:id="@+id/fkje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@+id/txt_img4"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15dp"
                     android:layout_centerInParent="true"
                     android:layout_marginLeft="10dp"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" 
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="审核结果:"
                    android:textSize="20dp"
                    android:textColor="#0066ff"
                    android:id="@+id/txt_img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                     />

                <TextView
                    android:id="@+id/shjg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@+id/txt_img5"
                    android:singleLine="true"
                    android:textColor="#0066ff"
                    android:textSize="20dp"
                     android:layout_centerInParent="true"
                     android:layout_marginLeft="10dp"
                     />
            </RelativeLayout>
            

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/duanxintongzhi_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:gravity="center" 
        android:layout_marginTop="20dp">

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:layout_marginBottom="60dp">
        
        <ImageView
            android:id="@+id/bc"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/jsk_bc"
             android:layout_centerInParent="true"
             android:onClick="btnClick"
            />
    </RelativeLayout>

</RelativeLayout>